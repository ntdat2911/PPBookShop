<div class='p-10 pt-4'>
  <div
    class='flex shrink-0 items-center p-4 font-sans text-2xl font-semibold leading-snug text-blue-gray-900 antialiased'
  >Add new book</div>

  <form>

    <div class='grid grid-cols-2 gap-2'>

      <div>
        <div class='mb-5'>
          <label
            for='BookTitle'
            class='mb-3 block text-base font-medium text-[#07074D]'
          >Book Title</label>
          <input
            type='text'
            name='BookTitle'
            id='BookTitle'
            placeholder='Book Title'
            class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
            value={{book.BookTitle}}
          />
        </div>
        <div class='mb-5'>
          <label
            for='BookDescription'
            class='mb-3 block text-base font-medium text-[#07074D]'
          >Book Description</label>
          <textarea
            name='BookDescription'
            id='BookDescription'
            placeholder='Book Description'
            class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
            rows='5'
            required
          >
            {{book.BookDescription}}
          </textarea>
        </div>

        <div class='mb-5'>
          <label
            for='AuthorBy'
            class='mb-3 block text-base font-medium text-[#07074D]'
          >Select author</label>
          <select
            id='AuthorBy'
            name='AuthorBy'
            class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
          >
            {{#each authorList}}
    <option value={{AuthorID}} {{#if (equal AuthorID ../book.AuthorBy)}}selected{{/if}}>{{AuthorName}}</option>
  {{/each}}
          </select>
        </div>
        <div class='mb-5'>
          <label
            for='CategoryID'
            class='mb-3 block text-base font-medium text-[#07074D]'
          >Select category</label>
          <select
            id='CategoryID'
            name='CategoryID'
            class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
          >

             {{#each categoryList}}
    <option value={{CategoryID}} {{#if (equal CategoryID ../book.CategoryID)}}selected{{/if}}>{{CategoryName}}</option>
  {{/each}}
          </select>
        </div>

        <div class='mb-5'>
          <label
            for='PublishDate'
            class='block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400'
          >Select a date</label>
        <input
  type='date'
  id='PublishDate'
  name='PublishDate'
  value={{formatDate book.PublishDate}}
  class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
/>
        </div>

      </div>
      <div class='mb-5 flex flex-col'>

        <div class='mb-5'>
          <label
            for='BookPrice'
            class='mb-3 block text-base font-medium text-[#07074D]'
          >Book Price</label>
          <input
            type='number'
            name='BookPrice'
            id='BookPrice'
            placeholder='Price'
            min='0'
            step='0.01'
            class='w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md'
          value={{book.BookPrice}}
          />
        </div>
        <div class='grid grid-cols-2'>

          <div class='mb-5'>
            <label
              for='IsBookActive'
              class='flex items-center cursor-pointer relative'
            >
              <input
                type='checkbox'
                id='IsBookActive'
                name='IsBookActive'
                class='sr-only'
             {{#if book.IsBookActive}}checked{{/if}}
              />
              <div
                class='toggle-bg bg-gray-200 border-2 border-gray-200 h-6 w-11 rounded-full'
              ></div>
              <span class='ml-3 text-gray-900 text-sm font-medium'>Active</span>
            </label>
          </div>

          <div class='mb-5'>
            <label
              for='IsOutOfStock'
              class='flex items-center cursor-pointer relative'
            >
              <input
                type='checkbox'
                id='IsOutOfStock'
                name='IsOutOfStock'
                class='sr-only'
                 {{#if book.IsOutOfStock}}checked{{/if}}
              />
              <div
                class='toggle-bg bg-gray-200 border-2 border-gray-200 h-6 w-11 rounded-full'
              ></div>
              <span class='ml-3 text-gray-900 text-sm font-medium'>Out of stock</span>
            </label>
          </div>
        </div>

        <label
          for='bookCover'
          class='mb-3 block text-base font-medium text-[#07074D]'
        >Book Cover</label>
        <div
          class='relative border-dashed border-2 border-gray-400 py-4 flex flex-col justify-center items-center'
          id='file-drop-area'
        >
          <input
            type='file'
            id='bookCover'
            name='bookCover'
            class='hidden'
            accept='image/*'
          />
          <button
            type='button'
            id='upload-button'
            class='mt-2 rounded-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:shadow-outline focus:outline-none'
          >Upload a file</button>
          <p id='file-name' class='mt-3 text-gray-700'></p>
        </div>

        <img
          id='image-preview'
          src={{book.ImageURL}}
          alt='Image Preview'
          class='mt-3 w-72 object-cover self-center'
        />
      </div>
    </div>
    <div
      class='flex shrink-0 flex-wrap items-center justify-end p-4 text-blue-gray-500'
    >
      <button
        class='middle none center rounded-lg bg-gradient-to-tr from-green-600 to-green-400 py-3 px-6 font-sans text-xs font-bold uppercase text-white shadow-md shadow-green-500/20 transition-all hover:shadow-lg hover:shadow-green-500/40 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none'
        type='submit'
      >Confirm</button>
    </div>
  </form>

</div>